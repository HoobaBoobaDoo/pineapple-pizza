rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Tasks collection - users can only access their own tasks
    match /tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Task completions collection - users can only access their own completions
    match /taskCompletions/{completionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Weekly totals collection - users can only access their own weekly totals
    match /weeklyTotals/{weeklyTotalId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow all operations for development (expires March 27, 2026)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 3, 27);
    }
  }
}
